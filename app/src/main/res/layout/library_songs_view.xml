<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_61sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/librarySongItemView"
        android:padding="@dimen/_1sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/songThumb"
            android:layout_width="@dimen/_46sdp"
            android:layout_height="@dimen/_46sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/songTitle"
            android:layout_width="@dimen/_158sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:maxLines="1"
            android:maxLength="30"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@+id/songThumb"
            app:layout_constraintTop_toTopOf="@+id/songThumb" />

        <TextView
            android:id="@+id/songArtist"
            android:layout_width="@dimen/_158sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:text="Artist"
            android:textColor="@color/light_gray"
            android:maxLines="1"
            android:maxLength="30"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="@+id/songThumb"
            app:layout_constraintStart_toEndOf="@+id/songThumb" />

        <TextView
            android:id="@+id/songDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:text="3:00"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="@+id/songThumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/songThumb" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>