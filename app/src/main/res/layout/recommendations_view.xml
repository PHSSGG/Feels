<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/recommendationThumb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/recommendationTitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Title"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:maxLines="1"
        android:maxLength="25"
        app:layout_constraintStart_toEndOf="@+id/recommendationThumb"
        app:layout_constraintTop_toTopOf="@+id/recommendationThumb" />

    <TextView
        android:id="@+id/recommendationArtist"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:text="Artist"
        android:textColor="#9B9B9B"
        android:maxLines="1"
        android:maxLength="25"
        app:layout_constraintBottom_toBottomOf="@+id/recommendationThumb"
        app:layout_constraintStart_toEndOf="@+id/recommendationThumb" />

    <ImageButton
        android:id="@+id/recommendationDownloadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/recommendationThumb"
        app:layout_constraintTop_toTopOf="@+id/recommendationThumb"
        app:srcCompat="@drawable/ic_download" />

</androidx.constraintlayout.widget.ConstraintLayout>